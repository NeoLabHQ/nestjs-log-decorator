  "author": "Vlad Goncharov <leovs010@gmail.com>",
  "license": "AGPL-3.0",
  "homepage": "https://github.com/neolabhq/nest-http-client#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neolabhq/nest-http-client.git"
  },
  "bugs": {
    "url": "https://github.com/neolabhq/nest-http-client/issues"
  },
  "exports": {
